%>
<% if host_param('blacklist_kernel_modules') -%>
  <% host_param('blacklist_kernel_modules').split.each do |mod| -%>
    echo "blacklist <%= mod %>" >> /etc/modprobe.d/blacklist.conf
  <% end -%>
<% end -%>
