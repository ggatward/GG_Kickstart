<%#
kind: snippet
name: GatwardIT-snippet_sophos
locations:
- Home
organizations:
- GatwardIT
- MyOrg
%>
echo "+++++++++++++++++++Sophos Agent Installation Snippet +++++++++++++++++++++++++++"
<%# Install and configure sophos agent %>
mount -o remount,exec /tmp
yum -q -y install savinstpkg

<%# Copy in savd config %>
wget -q -O /opt/sophos-av/etc/savd.cfg http://repo.example.com/configs/savd.cfg

<%# Update application and definitions %>
echo ">>> Updating sophos definitions"
/opt/sophos-av/bin/savupdate

<%# Set permissions so users can run scans %>
chmod 755 /opt/sophos-av/bin
